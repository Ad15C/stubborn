{% extends 'base.html.twig' %}

{% block body %}
<div class="login-wrapper">
    <div class="login-box">
        <h1>Se Connecter</h1>
        <hr>

         {# Flash messages globaux #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash {{ label }}">{{ message }}</div>
            {% endfor %}
        {% endfor %}

        {% if error %}
            <div class="field-error">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
    
        <form method="post" action="{{ path('app_login') }}">
            <label for="username">Nom d'utilisateur :</label>
            <input 
                type="email" 
                id="username" 
                name="_username" 
                value="{{ last_username }}" 
                placeholder="ex: johndoe@gmail.com" 
                required 
                autocomplete="new-username"
            >

            <label for="password">Mot de passe :</label>
            <input 
                type="password" 
                id="password" 
                name="_password" 
                placeholder="••••••••" 
                required
            >

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn-login">Se connecter</button>
        </form>

        <div class="forgot-password">
            <a href="{{ path('app_forgot_password') }}">Mot de passe oublié ?</a>
        </div>

        <hr class="separator">

        <p>Pas encore inscrit ?</p>
        <a href="{{ path('app_register') }}" class="btn-register">Créer un compte</a>

        <p><a href="{{ path('home') }}">Retour à l'accueil</a></p>
    </div>
</div>

<style>
.login-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 80vh;
}
.login-box {
    width: 350px;
    padding: 30px 40px;
    border: 1px solid #ccc;
    border-radius: 10px;
    background-color: #fff;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}
.login-box h1 {
    text-align: center;
    margin-bottom: 10px;
}
.login-box hr {
    margin-bottom: 20px;
    border: none;
    border-top: 2px solid #eee;
}
.login-box label {
    display: block;
    margin-top: 15px;
    font-weight: bold;
    font-size: 0.9em;
}
.login-box input {
    width: 100%;
    padding: 10px;
    margin-top: 5px;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-size: 0.95em;
}
.btn-login {
    width: 100%;
    padding: 12px;
    margin-top: 20px;
    background-color: #007BFF;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}
.btn-login:hover {
    background-color: #0056b3;
}
.btn-register {
    display: block;
    width: 100%;
    text-align: center;
    padding: 12px;
    margin-top: 10px;
    background-color: #007BFF;
    color: white;
    font-weight: bold;
    text-decoration: none;
    border-radius: 5px;
}
.btn-register:hover {
    background-color: #0056b3;
}
.forgot-password {
    text-align: center;
    margin-top: 10px;
    font-size: 0.85em;
}
.forgot-password a {
    text-decoration: none;
    color: #007BFF;
}
.forgot-password a:hover {
    text-decoration: underline;
}
.separator {
    margin: 20px 0;
    border: none;
    border-top: 1px solid #ddd;
    width: 100%;
}
.flash {
    padding: 10px;
    margin-bottom: 10px;
    border-radius: 5px;
    font-weight: bold;
}
.flash.success { background-color: #d4edda; color: #155724; }
.flash.error { background-color: #f8d7da; color: #721c24; }
.field-error {
    color: red;
    font-size: 0.85em;
    margin-top: 5px;
}
</style>
{% endblock %}