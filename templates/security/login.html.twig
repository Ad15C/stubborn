{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<h1>Connexion</h1>

{% if error %}
    <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('app_login') }}" method="post">
    <label for="email">Email :</label>
    <input type="email" id="email" name="_username" value="{{ last_username }}" required autofocus>

    <label for="password">Mot de passe :</label>
    <input type="password" id="password" name="_password" required>

    <button type="submit">Se connecter</button>
</form>

<p>Pas encore inscrit ? <a href="{{ path('app_register') }}">Créer un compte</a></p>
<p><a href="{{ path('home') }}">Retour à l'accueil</a></p>
{% endblock %}
