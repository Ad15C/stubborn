{% extends 'base.html.twig' %}

{% block title %}{{ product.name }} - Stubborn{% endblock %}

{% block body %}
<h1>{{ product.name }}</h1>
<img src="{{ asset(product.image) }}" alt="{{ product.name }}" style="max-width:300px;">
<p>Prix : {{ product.price }} €</p>
<p>Stock XS : {{ product.stockXS }}</p>
<p>Stock S : {{ product.stockS }}</p>
<p>Stock M : {{ product.stockM }}</p>
<p>Stock L : {{ product.stockL }}</p>
<p>Stock XL : {{ product.stockXL }}</p>
<a href="{{ path('products') }}">Retour à la boutique</a>
{% endblock %}
