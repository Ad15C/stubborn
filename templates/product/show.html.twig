{% extends 'base.html.twig' %}

{% block title %}Détail du sweat-shirt{% endblock %}

{% block body %}
<div class="product-wrapper">
    <div class="product-box">

        <div class="product-container">
            
            <!-- Partie gauche : image -->
            <div class="product-image">
                <img src="{{ asset(product.image) }}" 
                     alt="{{ product.name }}" 
                     onerror="this.onerror=null;this.src='{{ asset('images/products/default.jpeg') }}';">
            </div>

            <!-- Partie droite -->
            <div class="product-details">

                <form method="POST" action="{{ path('cart_add', {id: product.id}) }}">

                    <!-- Partie supérieure -->
                    <div class="details-top">

                        <div class="column-left">
                            <p><strong>Nom :</strong> {{ product.name }}</p>
                            <p><strong>Prix :</strong> {{ product.price }} €</p>
                        </div>

                        <div class="column-right">
                            <div class="size-box">
                                <p><strong>Taille :</strong></p>
                                <hr>

                                <div class="sizes">
                                    <label class="size-option">
                                        <input type="radio" name="size" value="XS" required>
                                        <span>XS</span>
                                    </label>

                                    <label class="size-option">
                                        <input type="radio" name="size" value="S">
                                        <span>S</span>
                                    </label>

                                    <label class="size-option">
                                        <input type="radio" name="size" value="M">
                                        <span>M</span>
                                    </label>

                                    <label class="size-option">
                                        <input type="radio" name="size" value="L">
                                        <span>L</span>
                                    </label>

                                    <label class="size-option">
                                        <input type="radio" name="size" value="XL">
                                        <span>XL</span>
                                    </label>
                                </div>

                            </div>
                        </div>

                    </div>

                    <!-- Ligne bouton -->
                    <div class="add-row">
                        <button type="submit" class="btn-add">
                            Ajouter au panier
                        </button>
                    </div>

                </form>

            </div> <!-- FIN product-details -->

        </div> <!-- FIN product-container -->

        <!-- Lien retour -->
        <p style="margin-top:20px; text-align:center;">
            <a href="{{ path('app_products') }}">← Retour à la liste des produits</a>
        </p>

    </div> <!-- FIN product-box -->
</div>


<style>
.product-wrapper {
    display: flex;
    justify-content: center;
    padding: 40px 20px;
}

/* Grand encadré */
.product-box {
    width: 90%;
    max-width: 1000px;
    border: 2px solid #ccc;
    border-radius: 10px;
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

/* Container principal : image à gauche, infos à droite */
.product-container {
    display: flex;
    gap: 20px;
}

/* Image à gauche */
.product-image {
    flex: 1;
}

.product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
}

/* Partie droite */
.product-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 20px;
}

/* Partie supérieure : deux colonnes centrées verticalement */
.details-top {
    display: flex;
    gap: 20px;
    justify-content: center; /* centre horizontalement */
    align-items: center;     /* centre verticalement */
}

.column-left, .column-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.column-left p {
    margin: 8px 0;
}

/* Encadré tailles */
.size-box {
    border: 1px solid #ccc;
    border-radius: 5px;
    padding: 10px;
}

.size-box hr {
    border: none;
    border-top: 1px solid #ccc;
    margin: 5px 0 10px 0;
}

.size-box p {
    text-align: center;
    margin-bottom: 5px;
}

/* Container tailles */
.sizes {
    display: flex;
    flex-direction: column; /* vertical */
    gap: 8px;
}

/* Cache le vrai bouton radio */
.size-option input {
    width: 100%;
     display: none; 
}

/* Style visuel des tailles */
.size-option span {
    display: block;          /* prend toute la largeur */
    width: 100%;
    padding: 8px 0;
    cursor: pointer;
    transition: 0.2s;
}

/* Effet hover */
.size-option span:hover {
    background-color: #f0f0f0;
    display: inline-block;
}

/* Taille sélectionnée */
.size-option input:checked + span {
    background-color: #007BFF;
    color: white;
    border-color: #007BFF;
}

/* Ligne bouton sur toute la largeur de la partie droite */
.add-row {
    width: 100%;
    display: flex;
    justify-content: center;
    margin-top: 30px;
}

.btn-add {
    width: 60%; /* bouton plus petit que la moitié droite */
    padding: 10px;
    background-color: #28a745;
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    border-radius: 5px;
    text-align: center;
}

.btn-add:hover {
    background-color: #218838;
}

/* Lien retour */
a {
    color: #007BFF;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

/* Responsive */
@media (max-width: 768px) {
    .product-container {
        flex-direction: column;
    }

    .details-top {
        flex-direction: column;
        gap: 15px;
    }

    .add-row {
        margin-top: 15px;
    }

    .btn-add {
        width: 80%;
    }
}
</style>
{% endblock %}