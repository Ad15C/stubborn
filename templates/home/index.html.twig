{% extends 'base.html.twig' %}

{% block title %}Accueil - Stubborn{% endblock %}

{% block body %}

<!-- Titre centré -->
<h1 style="text-align:center; margin-bottom:40px;">Bienvenue chez Stubborn</h1>

<!-- Produits mis en avant -->
<section class="featured-products">
    {% for product in featuredProducts %}
        <div class="product-card">
            <img src="{{ asset(product.image) }}" alt="{{ product.name }}">
            <h3> Nom: {{ product.name }}</h3>
            <p>Prix: {{ product.price|number_format(2, '.', ',') }} €</p>
            {% if app.user %}
                <a href="{{ path('product_show', {'id': product.id}) }}">Voir</a>
            {% endif %}
        </div>
    {% endfor %}
</section>

<hr>

<!-- Présentation société -->
<section class="company-info">
    <h2 style="text-align:center;">À propos de Stubborn</h2>
    <p style="text-align: left;">Jeune, dynamique et fiers de nos créations, nous allions confort, design et durabilité pour que chaque pièce vous accompagne au quotidien.</p>
    <p style="text-align:left;"><strong>Ne compromettez jamais votre look : choisissez Stubborn.</strong></p>
</section>

<style>
    .featured-products {
        display: flex;
        justify-content: center;
        gap: 20px;
        flex-wrap: wrap;
        margin-bottom: 40px;
    }

    .product-card {
        border: 1px solid #ccc;
        padding: 10px;
        width: 200px;
        text-align: center;
    }

    .product-card img {
        width: 100%;
        height: auto;
        object-fit: cover;
    }

    .product-card a {
        display: inline-block;
        margin-top: 10px;
        padding: 5px 10px;
        background-color: #333;
        color: #fff;
        text-decoration: none;
    }

    .product-card a:hover {
        background-color: #555;
    }

    .company-info {
        font-size: 1.1em;
        margin-top: 30px;
    }
</style>

{% endblock %}