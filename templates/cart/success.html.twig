{% extends 'base.html.twig' %}

{% block title %}Commande réussie{% endblock %}

{% block body %}
<div class="success-container">
    <div class="success-header">
        <h1>✔ Merci pour votre commande !</h1>
        <p>Votre commande a été enregistrée avec succès.</p>
    </div>

    <div class="order-details">
        <h2>Détails de la commande</h2>
        <p><strong>Numéro de commande :</strong> {{ order.id }}</p>
        <p><strong>Date :</strong> {{ order.createdAt|date('d/m/Y H:i') }}</p>
        <p><strong>Statut :</strong> {{ order.status|capitalize }}</p>
        <p><strong>Total :</strong> {{ order.total }} €</p>
    </div>

    {% if order.items is not empty %}
    <div class="order-items">
        <h2>Articles commandés</h2>
        <table>
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Taille</th>
                    <th>Quantité</th>
                    <th>Prix unitaire</th>
                    <th>Sous-total</th>
                </tr>
            </thead>
            <tbody>
                {% for item in order.items %}
                    <tr>
                        <td>{{ item.productName }}</td>
                        <td>{{ item.size }}</td>
                        <td>{{ item.quantity }}</td>
                        <td>{{ item.price }} €</td>
                        <td>{{ (item.price * item.quantity)|number_format(2, ',', ' ') }} €</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}

    <div class="back-home">
        <a href="{{ path('home') }}">Retour à l'accueil</a>
    </div>
</div>

<style>
.success-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 2rem;
    border: 1px solid #e0e0e0;
    border-radius: 12px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    background-color: #fff;
    font-family: Arial, sans-serif;
}

.success-header {
    text-align: center;
    margin-bottom: 2rem;
}

.success-header h1 {
    color: #4caf50;
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
}

.success-header p {
    font-size: 1.2rem;
    color: #555;
}

.order-details, .order-items {
    margin-bottom: 2rem;
}

.order-details h2, .order-items h2 {
    font-size: 1.5rem;
    border-bottom: 2px solid #4caf50;
    padding-bottom: 0.5rem;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 1rem;
}

thead {
    background-color: #f5f5f5;
    text-align: left;
}

th, td {
    padding: 0.5rem 1rem;
    border-bottom: 1px solid #eee;
}

.back-home {
    text-align: center;
    margin-top: 2rem;
}

.back-home a {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #4caf50;
    color: #fff;
    text-decoration: none;
    border-radius: 6px;
    font-weight: bold;
    transition: background 0.3s;
}

.back-home a:hover {
    background-color: #43a047;
}

/* Responsive */
@media (max-width: 600px) {
    .success-container {
        padding: 1rem;
    }

    table, thead, tbody, th, td, tr {
        display: block;
        width: 100%;
    }

    thead {
        display: none;
    }

    tr {
        margin-bottom: 1rem;
        border-bottom: 2px solid #f5f5f5;
    }

    td {
        text-align: right;
        padding-left: 50%;
        position: relative;
    }

    td::before {
        content: attr(data-label);
        position: absolute;
        left: 1rem;
        width: 45%;
        text-align: left;
        font-weight: bold;
    }
}
</style>
{% endblock %}
